{
	"compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "ES6",
    "target": "ES2018",
		"noEmit": false,
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
		"moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
		"useDefineForClassFields": true,
  },
	"include": [
		"src/**/*.js", 
		"src/**/*.jsx", 
		"src/**/*.ts", 
		"src/**/*.tsx", 
		"src/*.js", 
		"src/*.jsx", 
		"src/*.ts", 
		"src/*.tsx", 
	],
	"exclude": ["node_modules", "dist"]
}